<!DOCTYPE html>
<html>
  <%= render 'layouts/header' %>

  <body>
    <%= render 'layouts/navigation' %>
    
    <%= render 'layouts/flash' %>
    
    <div class="container">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item" aria-current="page">
            <%= render_breadcrumbs separator: ' / ' %>
          </li>
        </ol>
      </nav>
    </div>

    <div class="container">    
      <div class="row">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
