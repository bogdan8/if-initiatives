<!DOCTYPE html>
<html>
  <%= render 'layouts/header' %>

  <body>
    <%= render 'layouts/navigation' %>
    
    <%= render 'layouts/flash' %>

    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page">
          <%= render_breadcrumbs separator: ' / ' %>
        </li>
      </ol>
    </nav>
    
    <div class="container">    
      <div class="row">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
