<% @initiatives.decorate.each do |initiative| %>
  <div class="card border-success col-sm-4 margin-bottom-20">
    <div class="card-header bg-transparent border-success text-success">
      <h5 class="card-title text-center"><%= initiative.title %></h5>
    </div>
    <div class="card-body text-success">
      <div class="row">
        <div class="col-sm-6">
          <%= image_tag(initiative.attachments.first.image.url(:medium), class: 'full-image') if initiative.attachments.first %>
        </div>
        <div class="col-sm-6">
          <p class="card-text"><%= initiative.short_description %></p>
        </div>
      </div>
    </div>
    <div class="card-footer bg-transparent border-success">
      <p><%= t('views.pages.global.finish_date') %>: <%= initiative.finish_date %></p>
      <p><%= t('views.pages.global.general_sum') %>: <%= initiative.general_sum %></p>
      <p><%= t('views.pages.global.collected_amount') %>: <%= initiative.collected_amount %></p>
      <p><%= t("views.pages.initiatives.state.#{initiative.state}") %></p>

      <!-- Categories -->
      <p><%= t('views.pages.global.categories') %>: 
        <%= initiative.categories_title %>
      </p>
      <!-- links -->
      <p>
        <%= link_to t('views.pages.global.button.show'), administration_initiative_path(initiative), class: 'btn btn-info btn-sm' %>
        <%= link_to t('views.pages.global.button.destroy'), administration_initiative_path(initiative), method: :delete, data: { confirm: t('views.pages.global.confirm') }, class: 'btn btn-danger btn-sm' %>
        <%= initiative_state_administrator_links(initiative) %>

        <%= to_locked(initiative) %>
      </p>
    </div>
  </div>
<% end %>
