<%= provide :site_title, t('views.pages.global.category') %>
<%= provide :categories, 'active' %>

<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--12-col">
    <div class="demo-card-wide mdl-card mdl-shadow--2dp">
      <div class="mdl-card__supporting-text">
        <p><%= t('views.pages.global.title') %>: <%= @category.title %></p>
        <p><%= t('views.pages.global.position') %>: <%= @category.position %></p>
        <p><%= t('views.pages.global.initiatives') %>: <%= @category.initiatives.count %></p>

        <!-- links -->
        <p>
          <%= link_to t('views.pages.global.button.edit'), edit_administration_category_path(@category), class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent' %>
          <%= link_to t('views.pages.global.button.destroy'), administration_category_path(@category), method: :delete, data: { confirm: t('views.pages.global.confirm') }, class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent' %>
        </p>
      </div>
    </div>
  </div>
</div>
