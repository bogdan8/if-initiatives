<%= provide :site_title, t('views.pages.global.category') %>
<%= provide :categories_show, 'active' %>

<h1><%= t('views.pages.global.category') %>: <%= @category.title %></h1>

<div>
  <p><%= t('views.pages.global.title') %>: <%= @category.title %></p>
  <p><%= t('views.pages.global.position') %>: <%= @category.position %></p>

  <!-- links -->
  <p>
    <%= link_to t('views.pages.global.button.edit'), edit_administration_category_path(@category), class: 'btn btn-warning btn-sm' %>
    <%= link_to t('views.pages.global.button.destroy'), administration_category_path(@category), method: :delete, data: { confirm: t('views.pages.global.confirm') }, class: 'btn btn-danger btn-sm' %>
  </p>
</div>