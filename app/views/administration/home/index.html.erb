<%= provide :site_title, t('views.pages.global.administration') %>
<%= provide :administration, 'active' %>

<div class="row">
  <div class="col-xl-3 col-sm-6 mb-3">
    <div class="card text-white bg-primary o-hidden h-100">
      <div class="card-body">
        <div class="card-body-icon">
          <%= fa_icon 'book 2x' %>
        </div>
        <div class="mr-5"><%= @presenter.initiatives_count %> <%= t('views.pages.global.initiatives') %> </div>
      </div>
      <%= link_to administration_initiatives_path, class: 'card-footer text-white clearfix small z-1' do %>
        <span class="float-left"><%= t('views.pages.global.button.show') %></span>
        <span class="float-right">
          <%= fa_icon 'angle-right' %>
        </span>
      <% end %>
    </div>
  </div>
  <div class="col-xl-3 col-sm-6 mb-3">
    <div class="card text-white bg-warning o-hidden h-100">
      <div class="card-body">
        <div class="card-body-icon">
          <%= fa_icon 'address-book 2x' %>
        </div>
        <div class="mr-5"><%= @presenter.users_count %> <%= t('views.pages.global.users') %> </div>
      </div>
      <%= link_to administration_users_path, class: 'card-footer text-white clearfix small z-1' do %>
        <span class="float-left"><%= t('views.pages.global.button.show') %></span>
        <span class="float-right">
          <%= fa_icon 'angle-right' %>
        </span>
      <% end %>
    </div>
  </div>
  <div class="col-xl-3 col-sm-6 mb-3">
    <div class="card text-white bg-success o-hidden h-100">
      <div class="card-body">
        <div class="card-body-icon">
          <%= fa_icon 'envelope 2x' %>
        </div>
        <div class="mr-5"><%= @presenter.subscriptions_count %> <%= t('views.pages.global.subscriptions') %> </div>
      </div>
      <%= link_to administration_subscriptions_path, class: 'card-footer text-white clearfix small z-1' do %>
        <span class="float-left"><%= t('views.pages.global.button.show') %></span>
        <span class="float-right">
          <%= fa_icon 'angle-right' %>
        </span>
      <% end %>
    </div>
  </div>
  <div class="col-xl-3 col-sm-6 mb-3">
    <div class="card text-white bg-danger o-hidden h-100">
      <div class="card-body">
        <div class="card-body-icon">
          <%= fa_icon 'list-alt 2x' %>
        </div>
        <div class="mr-5"><%= @presenter.categories_count %> <%= t('views.pages.global.categories') %> </div>
      </div>
      <%= link_to administration_categories_path, class: 'card-footer text-white clearfix small z-1' do %>
        <span class="float-left"><%= t('views.pages.global.button.show') %></span>
        <span class="float-right">
          <%= fa_icon 'angle-right' %>
        </span>
      <% end %>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-sm-12">
    <i class="fa fa-newspaper-o"></i>New initiatives
  </div>
  <div class="col-sm-12">
    <div class="row">
      <% @presenter.initiatives.each do |initiative| %>
        <div class="col-sm-4">
          <a href="#">
            <%= image_tag(initiative.attachments.first.image.url(:medium), class: 'card-img-top img-fluid w-100') if initiative.attachments.first %>
          </a>
          <div class="card-body">
            <p><%= t('views.pages.global.finish_date') %>: <%= initiative.finish_date %></p>
            <p><%= t('views.pages.global.general_sum') %>: <%= initiative.general_sum %></p>
            <p><%= t('views.pages.global.collected_amount') %>: <%= initiative.collected_amount %></p>
            <p><%= t("views.pages.initiatives.state.#{initiative.state}") %></p>

          <!-- Categories -->
          <p>
            <%= t('views.pages.global.categories') %>: <%= initiative.decorate.categories_title %>
          </p>

          <!-- links -->
          <div class="flex-between">
            <%= link_to t('views.pages.global.button.show'), administration_initiative_path(initiative), class: 'btn btn-info btn-sm' %>
            <%= link_to t('views.pages.global.button.destroy'), administration_initiative_path(initiative), method: :delete, data: { confirm: t('views.pages.global.confirm') }, class: 'btn btn-danger btn-sm' %>
            <%= initiative_state_administrator_links(initiative) %>

            <%= to_locked(initiative) %>
          </div>
          <div class="card-footer small text-muted"><%= added_time(initiative) %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
