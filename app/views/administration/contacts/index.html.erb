<%= provide :site_title, t('views.pages.global.contacts') %>
<%= provide :contacts, 'active' %>

<div class="mdl-grid"> 
  <% @contacts.each do |contact| %>
    <div class="mdl-cell mdl-cell--3-col-desktop mdl-cell--12-col-table mdl-cell--12-col-phone">
      <div class="demo-card-square mdl-card mdl-card-subscriptions mdl-shadow--2dp">
        <div class="mdl-card__supporting-text">
          <p>
            <%= t('views.pages.global.email') %>: <%= contact.email %>
          </p>
          <p>
            <%= t('views.pages.global.description') %>: <%= contact.description %>
          </p>
          <!-- links -->
          <p>
            <%= link_to t('views.pages.global.button.destroy'), administration_contact_path(contact), method: :delete, data: { confirm: t('views.pages.global.confirm') }, class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent' %>
          </p>
        </div>
      </div> 
    </div>
  <% end %>
</div>

<div class="mdl-grid"> 
  <div class="mdl-cell mdl-cell--12-col-desktop mdl-cell--12-col-table mdl-cell--12-col-phone">
      <%= paginate @contacts %>
  </div>
</div>
