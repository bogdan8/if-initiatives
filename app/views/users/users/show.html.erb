<%= provide :site_title, t('views.pages.global.user') %>
<%= provide :users_show, 'active' %>

<div class="row">
  <div class="col-sm-12">
    <p><%= t('views.pages.users.name') %>: <%= @user.name %></p>
    <p><%= t('views.pages.users.phone') %>: <%= @user.phone %></p>
    <p><%= t('views.pages.users.age') %>: <%= @user.age %></p>
    <p><%= t('views.pages.users.roles') %>: <%= @user.decorate.roles_name %></p>
    <div class="avatar">
      <%= image_tag @user.avatar.url(:original), class: 'full-image' %>
    </div>
  </div>
</div>
