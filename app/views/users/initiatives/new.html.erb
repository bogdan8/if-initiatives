<h2>Create initiative</h2>

<%= simple_form_for [:users, @initiative], html: { multipart: true } do |f| %>
  <%= f.input :title %>
  <%= f.input :short_description %>
  <%= f.input :long_description %>
  <%= f.input :finish_days %>
  <%= f.input :general_sum %>

  <%= f.input :category_ids, collection: @categories.order(:title), label_method: :title, value_method: :id, prompt: 'Chose your categories', input_html: { multiple: true } %>

  <div id="photos_cocoon">
    <%= f.simple_fields_for :photos do |photo| %>
      <%= render 'photo_fields', f: photo %>
    <% end %>
  </div>

  <%= link_to_add_association 'add photo', f, :photos, data: { 
    association_insertion_node: '#photos_cocoon', association_insertion_method: :append } %>
  <%= f.button :submit, t('views.pages.global.button.new') %>

<% end %>