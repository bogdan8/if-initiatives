  </div>
  <div class="container">
    <div class="empty-sp-lg-0 empty-sp-md-130 empty-sp-sm-100 empty-sp-xs-100"></div>
    <div class="vertical-align full no-align-md">
      <div class="main-detail-baner">
        <div class="empty-sp-lg-100 empty-sp-md-80 empty-sp-sm-80 empty-sp-xs-80"></div>
        <div class="bg" style="background-image:url(<%= @initiative.attachments.first.image.url(:original) %>)">
          <div class="hold-layer-2"></div>
        </div>
        <div class="title-style-4 center">
          <h1 class="caption-1 color-1"><%= @initiative.title %></h1>
          <div class="empty-sp-sm-20 empty-sp-xs-20"></div>
          <div class="title-separator"></div>
          <div class="empty-sp-sm-25 empty-sp-xs-25"></div>
          <div class="simple-text size-2 color-1">
            <p><%= @initiative.short_description %></p>
          </div>
        </div>
        <div class="empty-sp-lg-100 empty-sp-md-80 empty-sp-sm-80 empty-sp-xs-80"></div>
      </div>
    </div>
    <div class="empty-sp-lg-0 empty-sp-md-70 empty-sp-sm-70 empty-sp-xs-50"></div>
  </div>
  <a href="<%= initiative_path(@previous) %>" class="portfolio-arrow arrow-prev">
    <div class="title">
      <h5 class="caption-5 color-1"><%= @previous.title %></h5>
    </div>
    <div class="empty-sp-sm-20 empty-sp-xs-20"></div>
    <span class="arrow-line"><i class="icon-left-open-big"></i><b class="line"></b></span>
    <div class="empty-sp-sm-20 empty-sp-xs-20"></div>
    <span class="image">
      <%= image_tag @previous.attachments.first.image.url(:thumb), class: 'thumb' %>
    </span>
  </a>
  <a href="<%= initiative_path(@next) %>" class="portfolio-arrow arrow-next">
    <div class="title">
      <h5 class="caption-5 color-1"><%= @next.title %></h5>
    </div>
    <div class="empty-sp-sm-20 empty-sp-xs-20"></div>
    <span class="arrow-line"><i class="icon-right-open-big"></i><b class="line"></b></span>
    <div class="empty-sp-sm-20 empty-sp-xs-20"></div>
    <span class="image">
      <%= image_tag @next.attachments.first.image.url(:thumb), class: 'thumb' %>
    </span>
  </a>
</section>
