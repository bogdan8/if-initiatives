.mdl-grid.portfolio-max-width
  - collection.decorate.each do |initiative|
    .mdl-cell.mdl-cell--3-col-desktop.mdl-cell--6-col-tablet.mdl-cell--12-col-phone.mdl-shadow--4dp
      .mdl-card__media
        = image_tag(initiative.first_image(:medium), class: 'initiative-image')
      .mdl-card__title
        h2.mdl-card__title-text
          = initiative.title
      .mdl-card__supporting-text
        p.short_description
          = initiative.short_description
        p
          = t('views.pages.global.finish_date')
          | \: #{initiative.finish_date}
        p
          = t('views.pages.global.general_sum')
          | \: #{initiative.general_sum}
        p
          = t('views.pages.global.collected_amount')
          | \: #{initiative.collected_amount}
        p= t("views.pages.initiatives.state.# initiative.state ")
        /! Categories
        p
          = t('views.pages.global.categories')
          | #{category_link initiative}
      .mdl-card__actions.mdl-card--border
        = link_to t('views.pages.global.button.show'), initiative_path(initiative), class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-button--accent'
